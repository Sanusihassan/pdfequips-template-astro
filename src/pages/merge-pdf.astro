---
import BaseLayout from "../BaseLayout.astro";
import {
    downloadFile,
    edit_page,
    errors,
    tool,
    tools,
} from "../content/content";
const { title, description, seoTitle, to } = tool.Merge_PDF;
import { Provider as ReduxProvider } from "react-redux";
import { configureStore } from "@reduxjs/toolkit";
import toolReducer from "../store";
import { ToolWrapper } from "../../components/ToolWrapper";
import { howToSchema } from "../how-to/how-to";
export const store = configureStore({
    reducer: {
        tool: toolReducer,
    },
});
---

<BaseLayout title={title} description={description} seoTitle={seoTitle} to={to}>
    <ReduxProvider store={store}>
        <ToolWrapper
            client:load
            tools={tools}
            data={tool.Merge_PDF}
            lang=""
            errors={errors}
            edit_page={edit_page}
            pages={edit_page.pages}
            page={edit_page.page}
            downloadFile={downloadFile}
            features={tool.Merge_PDF.features}
            howTo={howToSchema}
            to={to}
            seoTitle={seoTitle}
        />
    </ReduxProvider>
</BaseLayout>
